@{
    ViewData["Title"] = "Оформление заказа";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">Оформление заказа</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label">Адрес доставки:</label>
                            <input type="text" name="address" class="form-control" placeholder="Город, улица, дом..." required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Подтвердить и купить</button>
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary">Назад в корзину</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>