@model ElectronicsStore.Domain.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-main-orange text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CurrentAvatarPath" />

                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <img src="@(Model.CurrentAvatarPath ?? "/img/w.png")"
                                     class="rounded-circle img-thumbnail"
                                     style="width: 150px; height: 150px; object-fit: cover;"
                                     alt="Аватар" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Avatar" class="form-label fw-bold">Изменить фото</label>
                                <input asp-for="Avatar" type="file" class="form-control w-75 mx-auto" accept="image/*" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning text-white fw-bold">Сохранить изменения</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-main-orange {
        background: linear-gradient(45deg, #ff6600, #ff8533);
    }
</style>