@using System.Linq
@model ElectronicsStore.Domain.ViewModels.CatalogViewModel

@{
    ViewData["Title"] = "Каталог";

    // Получаем текущие параметры из URL
    var currentCategory = Context.Request.Query["category"].ToString();
    var currentSearch = Context.Request.Query["searchString"].ToString();

    // Логика: Если есть категория или поиск -> показываем товары. Иначе -> меню категорий.
    bool showProducts = !string.IsNullOrEmpty(currentCategory) || !string.IsNullOrEmpty(currentSearch);

    // Красивое название для заголовка
    string categoryName = currentCategory switch
    {
        "smartphones" => "Телефоны",
        "tvs" => "ТВ и Экраны",
        "pc" => "Компьютеры",
        "Аксессуары" => "Аксессуары",
        _ => "Результаты поиска"
    };
}

<div class="container-fluid" style="background-color: #050505; min-height: 100vh;">
    <div class="container py-5">

        @if (!showProducts)
        {
            /* =======================================================
            ЭКРАН 1: ВЫБОР КАТЕГОРИИ (Списка товаров НЕТ)
            ======================================================= */

            <p class="text-muted mt-2">Выберите категорию или найдите нужный товар</p>

            <div class="d-flex justify-content-center mt-4">
                <form asp-controller="Home" asp-action="Catalog" method="get" class="w-100" style="max-width: 700px;">
                    <div class="input-group input-group-lg">

                        <input type="text" name="searchString" class="form-control bg-dark text-white border-secondary"
                               placeholder="Например: Iphone 15..."
                               aria-label="Поиск товара"
                               style="border-radius: 10px 0 0 10px; padding: 15px;">

                        <button class="btn btn-warning px-5 fw-bold" type="submit"
                                style="border-radius: 0 10px 10px 0; color: #000;">
                            НАЙТИ
                        </button>

                    </div>
                </form>
            </div>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 fade-in-up">

                <div class="col">
                    <a asp-action="Catalog" asp-route-category="smartphones" class="text-decoration-none category-nav-link">
                        <div class="card h-100 category-big-card">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center p-5">
                                <div class="icon-big mb-3">📱</div>
                                <h3 class="fw-bold text-white text-uppercase m-0">Телефоны</h3>
                                <p class="text-muted small mt-2">Смартфоны и гаджеты</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col">
                    <a asp-action="Catalog" asp-route-category="tvs" class="text-decoration-none category-nav-link">
                        <div class="card h-100 category-big-card">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center p-5">
                                <div class="icon-big mb-3">📺</div>
                                <h3 class="fw-bold text-white text-uppercase m-0">ТВ и Экраны</h3>
                                <p class="text-muted small mt-2">Телевизоры и мониторы</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col">
                    <a asp-action="Catalog" asp-route-category="pc" class="text-decoration-none category-nav-link">
                        <div class="card h-100 category-big-card">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center p-5">
                                <div class="icon-big mb-3">💻</div>
                                <h3 class="fw-bold text-white text-uppercase m-0">Компьютеры</h3>
                                <p class="text-muted small mt-2">Ноутбуки и ПК</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col">
                    <a asp-action="Catalog" asp-route-category="Аксессуары" class="text-decoration-none category-nav-link">
                        <div class="card h-100 category-big-card">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center p-5">
                                <div class="icon-big mb-3">🎧</div>
                                <h3 class="fw-bold text-white text-uppercase m-0">Аксессуары</h3>
                                <p class="text-muted small mt-2">Периферия и звук</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-12 mt-4">
                    <a asp-action="Catalog" asp-route-category="all" class="text-decoration-none">
                        <div class="card category-big-card bg-main-orange-gradient">
                            <div class="card-body text-center p-3">
                                <h5 class="fw-bold text-black text-uppercase m-0">📦 Показать абсолютно все товары</h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

        }
        else
        {
            /* =======================================================
            ЭКРАН 2: СПИСОК ТОВАРОВ (Выбрана категория)
            ======================================================= */

            <div class="d-flex align-items-center mb-4 fade-in">
                <a asp-action="Catalog" asp-route-category="" class="btn btn-outline-secondary me-3 rounded-circle"
                   style="width: 40px; height: 40px; padding: 0; display: flex; align-items: center; justify-content: center;">
                    🠔
                </a>

                <div>
                    <h2 class="text-white fw-bold text-uppercase m-0">@categoryName</h2>
                    @* ИСПРАВЛЕНО: Добавлены скобки Count(), так как это метод IEnumerable *@
                    <small class="text-main-orange">Найдено товаров: @(Model.Products?.Count() ?? 0)</small>
                </div>

                <div class="ms-auto d-none d-md-block" style="width: 300px;">
                    <form asp-action="Catalog" method="get" class="search-form position-relative">
                        <input type="hidden" name="category" value="@currentCategory" />
                        <input name="searchString" class="form-control search-input-small"
                               type="search" placeholder="Поиск в этой категории..." value="@currentSearch">
                    </form>
                </div>
            </div>

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-4 fade-in-up">
                @* ИСПРАВЛЕНО: Any() это метод, он корректен *@
                @if (Model.Products != null && Model.Products.Any())
                {
                    @foreach (var product in Model.Products)
                    {
                        <div class="col">
                            <div class="card h-100 border-0 product-card bg-dark-card">

                                <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" class="img-wrapper">
                                    <img src="@(product.Images != null && product.Images.Any() ? product.Images.First().ImagePath : "/img/iphone15.jpg")"
                                         class="card-img-top" alt="@product.Name">
                                </a>

                                <div class="card-body d-flex flex-column text-center p-3">
                                    <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id"
                                       class="text-decoration-none text-white mb-2 product-title-link">
                                        <h6 class="card-title text-truncate fw-bold" title="@product.Name">@product.Name</h6>
                                    </a>

                                    <div class="mt-auto">
                                        <div class="price-tag mb-3">@product.Price.ToString("N0") ₽</div>
                                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id"
                                           class="btn btn-add-cart w-100">
                                            В КОРЗИНУ
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center text-muted py-5">
                        <div class="fs-1 mb-3 opacity-50">🔍</div>
                        <h3>В этой категории пока пусто</h3>
                        <a asp-action="Catalog" asp-route-category="" class="btn btn-outline-warning mt-3">Вернуться к категориям</a>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    /* ОБЩИЕ ЦВЕТА */
    :root {
        --c-orange: #ff6600;
        --c-dark-card: #1e1e1e;
    }

    .fw-800 {
        font-weight: 800;
    }

    .text-main-orange {
        color: var(--c-orange) !important;
    }

    .bg-dark-card {
        background-color: var(--c-dark-card);
    }

    /* КАРТОЧКИ ГЛАВНОГО МЕНЮ */
    .category-big-card {
        background: #1a1a1a;
        border: 1px solid #333;
        border-radius: 15px;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 0 4px 6px rgba(0,0,0,0.3);
    }

    .category-nav-link:hover .category-big-card {
        transform: translateY(-10px);
        border-color: var(--c-orange);
        box-shadow: 0 10px 30px rgba(255, 102, 0, 0.15);
    }

    .icon-big {
        font-size: 3.5rem;
        transition: 0.3s;
    }

    .category-nav-link:hover .icon-big {
        transform: scale(1.1);
    }

    .bg-main-orange-gradient {
        background: linear-gradient(45deg, #ff6600, #ff8533);
        border: none;
    }

        .bg-main-orange-gradient:hover {
            box-shadow: 0 0 20px rgba(255, 102, 0, 0.5);
        }

    /* ПОИСК */
    .search-input {
        background-color: #121212;
        border: 1px solid #444;
        color: #fff;
        padding: 15px 25px;
        border-radius: 50px;
        font-size: 1.1rem;
    }

        .search-input:focus {
            background-color: #000;
            border-color: var(--c-orange);
            color: #fff;
            box-shadow: 0 0 20px rgba(255, 102, 0, 0.2);
        }

    .search-btn {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        background: transparent;
        font-size: 1.5rem;
    }

    .search-input-small {
        background-color: #1a1a1a;
        border: 1px solid #333;
        color: #fff;
        border-radius: 30px;
        padding: 8px 15px;
    }

        .search-input-small:focus {
            background-color: #000;
            border-color: var(--c-orange);
            color: #fff;
        }

    /* ТОВАРЫ */
    .product-card {
        border: 1px solid #333 !important;
        border-radius: 12px;
        overflow: hidden;
        transition: 0.3s;
    }

        .product-card:hover {
            border-color: var(--c-orange) !important;
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.5);
        }

    .img-wrapper {
        background: #fff;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-img-top {
        max-height: 85%;
        max-width: 85%;
        object-fit: contain;
    }

    .price-tag {
        font-size: 1.3rem;
        font-weight: 800;
        color: var(--c-orange);
    }

    .btn-add-cart {
        border: 2px solid var(--c-orange);
        color: var(--c-orange);
        font-weight: 700;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-add-cart:hover {
            background: var(--c-orange);
            color: #fff;
        }

    /* АНИМАЦИИ ПОЯВЛЕНИЯ */
    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    .fade-in-up {
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>