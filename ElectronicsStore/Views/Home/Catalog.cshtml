@model List<ElectronicsStore.Domain.Entity.Product>

@{
    ViewData["Title"] = "Каталог товаров";
}

<div class="container mt-5">
    <h2 class="info-sections">Каталог товаров</h2>

    <form asp-controller="Home" asp-action="Catalog" method="get" class="mb-4">
        <div class="input-group input-group-lg mx-auto" style="max-width: 600px;">
            <input type="text" name="searchString" class="form-control bg-dark border-secondary text-white"
                   placeholder="Поиск по названию товара..."
                   value="@ViewData["CurrentFilter"]">
            <button class="btn btn-warning" type="submit">
                <i class="bi bi-search"></i> Найти
            </button>
            <a asp-controller="Home" asp-action="Catalog" class="btn btn-outline-secondary">Сброс</a>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 cards-wrapper">

        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="custom-card h-100">
                        <img src="@product.ImagePath" alt="@product.Name" class="card-img" style="height: 250px;">

                        <div class="card-body-custom">
                            <h3 class="card-title-custom">@product.Name</h3>
                            <p class="card-desc">@product.Description.Substring(0, Math.Min(product.Description.Length, 80))...</p>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h4 text-warning">@product.Price.ToString("C")</span>
                                <span class="badge bg-secondary">В наличии</span>
                            </div>

                            <form asp-controller="Cart" asp-action="Add" method="post">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="bi bi-cart"></i> В корзину
                                </button>
                            </form>

                            <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" class="btn btn-outline-secondary w-100 mt-2">
                                Подробнее
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center mt-5">
                <p class="text-white">Товары не найдены или каталог пуст.</p>
                @if (ViewData["CurrentFilter"] != null)
                {
                    <a asp-controller="Home" asp-action="Catalog" class="btn btn-sm btn-outline-warning">Показать весь каталог</a>
                }
            </div>
        }
    </div>
</div>