@model List<ElectronicsStore.Domain.Entity.Product>

@{
    ViewData["Title"] = "Каталог товаров";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <h4 class="mb-3 text-warning">Категории</h4>
                <a asp-action="Catalog" asp-route-category="" class="list-group-item list-group-item-action bg-dark text-light border-secondary">
                    Все товары
                </a>
                <a asp-action="Catalog" asp-route-category="Телевизоры и мониторы" class="list-group-item list-group-item-action bg-dark text-light border-secondary">
                    📺 Телевизоры и мониторы
                </a>
                <a asp-action="Catalog" asp-route-category="ПК и ноутбуки" class="list-group-item list-group-item-action bg-dark text-light border-secondary">
                    💻 ПК и ноутбуки
                </a>
                <a asp-action="Catalog" asp-route-category="Телефоны" class="list-group-item list-group-item-action bg-dark text-light border-secondary">
                    📱 Телефоны
                </a>
                <a asp-action="Catalog" asp-route-category="Аксессуары и периферия" class="list-group-item list-group-item-action bg-dark text-light border-secondary">
                    🎧 Аксессуары
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <form asp-action="Catalog" method="get" class="d-flex mb-4">
                <input name="searchString" class="form-control me-2 bg-dark text-white border-secondary" type="search" placeholder="Поиск товаров..." aria-label="Search">
                <button class="btn btn-warning" type="submit">Найти</button>
            </form>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                @if (Model != null && Model.Any())
                {
                    // ЦИКЛ НАЧИНАЕТСЯ ЗДЕСЬ
                    @foreach (var product in Model)
                    {
                        <div class="col">
                            <div class="card h-100 bg-dark border-secondary">
                                <img src="@(product.Images != null && product.Images.Any() ? product.Images.First().ImagePath : "/img/w.png")"
                                     class="card-img-top p-3" alt="@product.Name" style="height: 200px; object-fit: contain;">

                                <div class="card-body text-center">
                                    <h5 class="card-title text-white">@product.Name</h5>
                                    <p class="card-text text-warning fw-bold">@product.Price.ToString("C")</p>

                                    <div class="btn-group w-100">
                                        <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" class="btn btn-outline-light">Подробнее</a>

                                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id" class="btn btn-warning">В корзину</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center text-muted">
                        <h3>Товары не найдены 😕</h3>
                    </div>
                }
            </div>
        </div>
    </div>
</div>