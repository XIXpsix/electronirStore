@model ElectronicsStore.Domain.ViewModels.CatalogViewModel
@{
    ViewData["Title"] = "Каталог";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-3 col-lg-2 mb-4">
            <div class="p-3 border border-secondary rounded" style="background-color: #1e1e1e;">
                <h5 class="text-warning mb-3">Поиск и фильтры</h5>

                <div class="mb-3">
                    <label class="form-label text-light small">Название</label>
                    <input type="text" id="nameSearch" class="form-control form-control-sm bg-dark text-white border-secondary" placeholder="Введите название...">
                </div>

                <div class="mb-3">
                    <label class="form-label text-light small">Категория</label>
                    <select id="categoryId" class="form-select form-select-sm bg-dark text-white border-secondary">
                        <option value="0">Все категории</option>
                        @if (Model.Categories != null)
                        {
                            foreach (var cat in Model.Categories)
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label text-light small">Цена (₽)</label>
                    <div class="d-flex gap-2">
                        <input type="number" id="minPrice" class="form-control form-control-sm bg-dark text-white border-secondary" placeholder="От">
                        <input type="number" id="maxPrice" class="form-control form-control-sm bg-dark text-white border-secondary" placeholder="До">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-light small">Сортировка</label>
                    <select id="sortType" class="form-select form-select-sm bg-dark text-white border-secondary">
                        <option value="default">По умолчанию</option>
                        <option value="price_asc">Сначала дешевые</option>
                        <option value="price_desc">Сначала дорогие</option>
                    </select>
                </div>

            </div>
        </div>

        <div class="col-md-9 col-lg-10">
            <div class="row" id="productsContainer">
                @await Html.PartialAsync("../Product/List", Model.Products)
            </div>
        </div>
    </div>
</div>

<script src="~/js/catalog_script.js"></script>