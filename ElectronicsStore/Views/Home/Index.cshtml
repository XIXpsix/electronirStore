@model List<ElectronicsStore.Domain.Entity.Product>

@{
    ViewData["Title"] = "Главная";
}

<div class="landing-wrapper">
    <div class="hero-section text-center position-relative">
        <div class="container py-5">
            <div class="hero-content fade-in">
                <h1 class="display-3 fw-bold text-white text-uppercase mb-3 title-glow">
                    Electronics <span class="text-orange">Store</span>
                </h1>
                <p class="lead text-muted mb-5 mx-auto" style="max-width: 600px;">
                    Топовые гаджеты, мощные сборки и новинки мира технологий.
                    Выбирай лучшее для своих задач.
                </p>
                <a href="@Url.Action("Catalog", "Home")" class="btn btn-orange-glow btn-lg px-5 py-3 fw-bold text-uppercase">
                    Перейти в каталог 🚀
                </a>
            </div>
        </div>
        <div class="hero-overlay"></div>
    </div>

    <div class="container py-5">
        <div class="section-header mb-5 text-center fade-in-up">
            <h2 class="text-white fw-bold text-uppercase">
                🔥 Новые поступления
            </h2>
            <div class="divider mx-auto"></div>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">
                @foreach (var product in Model)
                {
                    <div class="col fade-in-up">
                        <div class="card h-100 product-card bg-dark-card border-0">
                            <div class="card-img-wrapper position-relative p-4 d-flex align-items-center justify-content-center" style="height: 250px; background: #fff; border-radius: 15px 15px 0 0;">
                                @if (string.IsNullOrEmpty(product.ImagePath))
                                {
                                    <span style="font-size: 4rem;">📷</span>
                                }
                                else
                                {
                                    <img src="@product.ImagePath" alt="@product.Name" class="img-fluid" style="max-height: 100%; object-fit: contain;">
                                }
                                <div class="badge-new">NEW</div>
                            </div>

                            <div class="card-body d-flex flex-column p-4">
                                <div class="mb-2">
                                    <span class="badge bg-secondary text-uppercase" style="font-size: 0.7rem;">
                                        @product.Category?.Name
                                    </span>
                                </div>
                                <h5 class="card-title text-white fw-bold mb-3 text-truncate" title="@product.Name">
                                    @product.Name
                                </h5>
                                <p class="card-text text-muted small flex-grow-1" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                    @product.Description
                                </p>

                                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top border-secondary">
                                    <span class="price text-orange fw-bold fs-5">@product.Price.ToString("N0") ₽</span>
                                    <a href="@Url.Action("GetProduct", "Product", new { id = product.Id })" class="btn btn-outline-orange btn-sm">
                                        Подробнее
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a href="@Url.Action("Catalog", "Home")" class="text-muted text-decoration-none small hover-link">
                    Посмотреть все товары &rarr;
                </a>
            </div>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <h4>Товары пока не добавлены 😔</h4>
            </div>
        }
    </div>

    <div class="features-section py-5 mt-5" style="background-color: #0f0f0f;">
        <div class="container">
            <div class="row text-center g-4">
                <div class="col-md-4">
                    <div class="feature-item p-4">
                        <div class="feature-icon mb-3">⚡</div>
                        <h4 class="text-white fw-bold">Быстрая доставка</h4>
                        <p class="text-muted small">Доставим ваш заказ в день оформления.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-item p-4">
                        <div class="feature-icon mb-3">🛡️</div>
                        <h4 class="text-white fw-bold">Гарантия качества</h4>
                        <p class="text-muted small">Только официальная продукция с гарантией.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-item p-4">
                        <div class="feature-icon mb-3">🎧</div>
                        <h4 class="text-white fw-bold">Поддержка 24/7</h4>
                        <p class="text-muted small">Наши специалисты всегда на связи.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* === STYLES === */
    :root {
        --orange: #ff6600;
        --dark-bg: #050505;
        --card-bg: #141414;
    }

    body {
        background-color: var(--dark-bg);
    }

    .text-orange {
        color: var(--orange) !important;
    }

    /* Hero */
    .hero-section {
        background: radial-gradient(circle at center, #1a1a1a 0%, #050505 100%);
        padding: 100px 0;
        overflow: hidden;
    }

    .title-glow {
        text-shadow: 0 0 30px rgba(255, 102, 0, 0.4);
    }

    /* Buttons */
    .btn-orange-glow {
        background: linear-gradient(45deg, #ff6600, #ff8533);
        color: white;
        border: none;
        border-radius: 50px;
        box-shadow: 0 10px 30px rgba(255, 102, 0, 0.3);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .btn-orange-glow:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(255, 102, 0, 0.5);
            color: white;
        }

    .btn-outline-orange {
        color: var(--orange);
        border: 1px solid var(--orange);
        transition: 0.3s;
    }

        .btn-outline-orange:hover {
            background: var(--orange);
            color: white;
        }

    /* Cards */
    .product-card {
        background-color: var(--card-bg);
        border: 1px solid #333;
        border-radius: 15px;
        transition: transform 0.3s;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-10px);
            border-color: var(--orange);
        }

    .badge-new {
        position: absolute;
        top: 15px;
        right: 15px;
        background: var(--orange);
        color: white;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 0.8rem;
    }

    /* Features */
    .feature-icon {
        font-size: 3rem;
    }

    .divider {
        height: 3px;
        width: 60px;
        background-color: var(--orange);
        margin-top: 15px;
    }

    /* Animations */
    .fade-in {
        animation: fadeIn 1s ease-out;
    }

    .fade-in-up {
        animation: fadeInUp 0.8s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>