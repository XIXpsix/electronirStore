@model IEnumerable<ElectronicsStore.Domain.Entity.Product>

@{
    ViewData["Title"] = "Список товаров";
}

<div class="container my-4">
    <a asp-controller="Home" asp-action="Catalog" class="btn btn-outline-dark mb-4">&larr; Назад в каталог</a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            В этой категории пока нет товаров.
        </div>
    }
    else
    {
        <h2 class="mb-4 text-center">@Model.First().Category?.Name</h2>

        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card h-100 shadow border-0 bg-dark overflow-hidden">

                        <div class="d-flex align-items-center justify-content-center bg-white p-2"
                             style="height: 160px;">
                            <img src="@(string.IsNullOrEmpty(product.ImagePath) ? "https://dummyimage.com/300x300/dee2e6/6c757d.jpg&text=No+Image" : product.ImagePath)"
                                 class="img-fluid"
                                 alt="@product.Name"
                                 style="max-height: 100%; max-width: 100%; object-fit: contain;">
                        </div>

                        <div class="card-body d-flex flex-column p-2">

                            <h6 class="card-title font-weight-bold mb-1" style="color: #ff9900; font-size: 1rem;">
                                @product.Name
                            </h6>

                            <p class="card-text text-white small mb-2"
                               style="font-size: 0.8rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; opacity: 0.9;">
                                @product.Description
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="font-weight-bold text-white" style="font-size: 1.1rem;">
                                        @product.Price.ToString("N0") ₽
                                    </span>

                                    <button class="btn btn-sm btn-warning font-weight-bold px-3" style="font-size: 0.8rem;">
                                        В корзину
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>