@model List<ElectronicsStore.Domain.Entity.Product>

@{
    ViewData["Title"] = "Список товаров";
}

<link rel="stylesheet" href="~/css/catalog.css" />

<input type="hidden" id="categoryId" value="@ViewBag.CategoryId" />

<div class="container mt-5">
    <div class="search-container mb-4">
        <input type="text" id="elasticSearch" class="form-control" placeholder="Поиск товаров...">
        <span class="clear-search">&times;</span>
    </div>
    <div class="mb-4">
        <a asp-controller="Home" asp-action="Catalog" class="btn btn-back-orange px-4 py-2">
            &larr; Вернуться к выбору категорий
        </a>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="filter-sidebar">
                <h4 class="mb-4 text-center">Фильтры</h4>

                <div class="filter-item mb-4">
                    <label class="form-label">Цена (₽)</label>
                    
                    <div class="price-input">
                        <div class="field">
                            <input type="number" class="input-min" value="0">
                        </div>
                        <div class="separator">-</div>
                        <div class="field">
                            <input type="number" class="input-max" value="300000">
                        </div>
                    </div>

                    <div class="slider mb-3">
                        <div class="progress"></div>
                    </div>

                    <div class="range-input">
                        <input type="range" class="range-min" min="0" max="300000" value="0" step="100">
                        <input type="range" class="range-max" min="0" max="300000" value="300000" step="100">
                    </div>
                </div>

                <button class="btn-apply w-100" id="applyFiltersBtn">Применить</button>
            </div>
        </div>

        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4 p-3 rounded" style="background-color: #212529; color: white;">
                <h2 class="m-0" style="color: #ff9900;">Товары</h2>

                <div class="d-flex align-items-center">
                    <span class="me-2 text-muted">Сортировка:</span>
                    <select class="form-select sort-select" id="sortSelect" style="width: auto;">
                        <option value="default">По умолчанию</option>
                        <option value="price_asc">Сначала дешевле</option>
                        <option value="price_desc">Сначала дороже</option>
                        <option value="name_asc">По названию (А-Я)</option>
                    </select>
                </div>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4" id="productsContainer">
                @if (Model == null || !Model.Any())
                {
                    <div class="col-12">
                        <div class="alert alert-dark text-center">В этой категории пока нет товаров.</div>
                    </div>
                }
                else
                {
                    @foreach (var product in Model)
                    {
                        <div class="col product-card">
                            <div class="card h-100 shadow border-0 bg-dark overflow-hidden">
                                <div class="d-flex align-items-center justify-content-center bg-white p-2" style="height: 160px;">
                                    <img src="@(string.IsNullOrEmpty(product.ImagePath) ? "https://dummyimage.com/300x300/dee2e6/6c757d.jpg&text=No+Image" : product.ImagePath)"
                                         class="img-fluid"
                                         alt="@product.Name"
                                         style="max-height: 100%; max-width: 100%; object-fit: contain;">
                                </div>

                                <div class="card-body d-flex flex-column p-3">
                                    <h5 class="card-title font-weight-bold mb-1" style="color: #ff9900; font-size: 1.1rem;">@product.Name</h5>
                                    <p class="card-text text-white small mb-3" style="opacity: 0.8;">@product.Description</p>
                                    
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="font-weight-bold text-white fs-5">@product.Price.ToString("N0") ₽</span>
                                            <button class="btn btn-sm btn-warning fw-bold">В корзину</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-top-0 p-2">
                                    <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" class="btn btn-outline-light w-100 btn-sm">Подробнее</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <div id="noResults" class="col-12 mt-4" style="display: none;">
                <div class="alert alert-dark text-center">
                    По вашему запросу ничего не найдено
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/catalog_script.js"></script>
}