@model IEnumerable<ElectronicsStore.Domain.Entity.Product>

@{
    ViewData["Title"] = "Список товаров";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Наши товары</h2>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p class="text-center text-muted">Товары пока не добавлены.</p>
            </div>
        }
        else
        {
            @foreach (var product in Model)
            {
                // col-12 делает блок во всю ширину (столбиком)
                <div class="col-12 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="row g-0">
                            <div class="col-md-3">
                                <img src="@product.ImagePath" class="img-fluid rounded-start" alt="@product.Name" style="height: 200px; width: 100%; object-fit: contain; padding: 10px;">
                            </div>

                            <div class="col-md-9">
                                <div class="card-body d-flex flex-column h-100">
                                    <h4 class="card-title">@product.Name</h4>
                                    <p class="card-text text-muted">@product.Description</p>

                                    <div class="mt-auto d-flex justify-content-between align-items-center">
                                        <h5 class="text-primary mb-0">@product.Price ₽</h5>
                                        <a asp-action="GetProduct" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-primary">
                                            Подробнее
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>