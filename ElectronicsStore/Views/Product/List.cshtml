@model List<ElectronicsStore.Domain.Product>

@{
    ViewData["Title"] = "Список товаров";
}

<div class="container mt-5">
    <h2 class="mb-4">Товары</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">В этой категории пока нет товаров.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        @* <img src="@product.ImagePath" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: contain;"> *@

                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p> <h6 class="text-primary">@product.Price ₽</h6>
                        </div>
                        <div class="card-footer">
                            <a href="#" class="btn btn-primary w-100">Подробнее</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>