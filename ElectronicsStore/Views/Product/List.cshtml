@model IEnumerable<ElectronicsStore.Domain.Entity.Product>

@{
    ViewData["Title"] = "Каталог товаров";
}

<h2 class="text-center mb-4 text-warning">КАТАЛОГ ТОВАРОВ</h2>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var product in Model)
        {
            <div class="col-6 col-md-4 col-lg-2 mb-4">
                <div class="card h-100 border-secondary" style="background-color: #1e1e1e; color: #fff;">

                    <div style="height: 150px; overflow: hidden; display: flex; align-items: center; justify-content: center; background-color: #fff;">
                        @* ВАЖНО: Мы используем 'product.Avatar', а НЕ 'Model.Avatar' *@
                        @if (product.Avatar != null && product.Avatar.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(product.Avatar)" alt="@product.Name" style="max-height: 100%; max-width: 100%; object-fit: contain;">
                        }
                        else
                        {
                            <img src="~/img/iphone15.jpg" alt="Нет фото" style="max-height: 100%; max-width: 100%; object-fit: contain;">
                        }
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-warning text-truncate" title="@product.Name">
                            @product.Name
                        </h6>

                        <p class="card-text small text-muted mb-2">
                            <small>@(product.Category?.Name ?? "Категория")</small>
                        </p>

                        <div class="mt-auto">
                            <h5 class="text-white mb-2">@product.Price ₽</h5>
                            <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" class="btn btn-sm btn-primary w-100">
                                Подробнее
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center text-white mt-5">
            <h4>Товаров пока нет :(</h4>
        </div>
    }
</div>