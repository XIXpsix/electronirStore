@using ElectronicsStore
@using ElectronicsStore.Models
@using ElectronicsStore.Domain.ViewModels
@using ElectronicsStore.Domain.Entity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelper
@model ElectronicsStore.Domain.ViewModels.CatalogViewModel

@{
    ViewData["Title"] = "Каталог товаров";
}

<div class="container py-4">
    <h2 class="text-center mb-5 text-warning fw-bold text-uppercase">Каталог товаров</h2>

    <div id="productsContainer">
        @if (Model != null && Model.Any())
        {
            @* 1. Группируем товары по названию категории *@
            @foreach (var group in Model.GroupBy(x => x.Category?.Name ?? "Другое").OrderBy(g => g.Key))
            {
                @* 2. Выводим заголовок категории *@
                <div class="category-section mb-5">
                    <h3 class="text-white mb-4 ps-3 border-start border-warning border-5">
                        @group.Key
                    </h3>

                    <div class="row g-4">
                        @* 3. Выводим товары этой группы *@
                        @foreach (var product in group)
                        {
                            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                                <div class="card h-100 border-secondary shadow-sm" style="background-color: #1e1e1e; transition: transform 0.2s;">

                                    @* Изображение *@
                                    <div class="position-relative bg-white overflow-hidden rounded-top" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                        @if (product.Avatar != null && product.Avatar.Length > 0)
                                        {
                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(product.Avatar)" alt="@product.Name" style="max-height: 90%; max-width: 90%; object-fit: contain;">
                                        }
                                        else
                                        {
                                            <img src="~/img/placeholder.jpg" alt="Нет фото" style="max-height: 90%; max-width: 90%; object-fit: contain; opacity: 0.5;">
                                        }
                                    </div>

                                    @* Контент карточки *@
                                    <div class="card-body d-flex flex-column p-3">
                                        <h6 class="card-title text-warning text-truncate mb-1" title="@product.Name" style="font-weight: 600;">
                                            @product.Name
                                        </h6>

                                        <p class="text-muted small mb-3">
                                            @* Можно вывести краткое описание или оставить пустым *@
                                            @(product.Description?.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)
                                        </p>

                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <span class="text-white fs-5 fw-bold">@product.Price.ToString("N0") ₽</span>
                                            </div>

                                            <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id" class="btn btn-warning w-100 fw-bold">
                                                Подробнее
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <h4 class="fw-light">Товары не найдены :(</h4>
                <p>Попробуйте изменить параметры поиска или загляните позже.</p>
            </div>
        }
    </div>
</div>