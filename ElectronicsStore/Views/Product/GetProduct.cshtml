@model ElectronicsStore.Domain.Entity.Product

@{
    ViewData["Title"] = Model?.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card bg-dark border-secondary p-3">
                <div class="text-center">
                    @if (Model != null && Model.Avatar != null && Model.Avatar.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Avatar)" alt="@Model.Name" class="img-fluid rounded" style="max-height: 400px;">
                    }
                    else
                    {
                        <img src="~/img/iphone15.jpg" alt="Нет изображения" class="img-fluid rounded">
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 text-white">
            <h2 class="text-warning display-5">@Model?.Name</h2>
            <h3 class="text-white mb-3">@Model?.Price ₽</h3>

            <p class="text-muted">
                Категория: <span class="text-warning">@(Model?.Category?.Name ?? "Не указана")</span>
            </p>

            <hr class="bg-secondary" />

            <h5 class="mt-4 text-warning">Описание:</h5>
            <p class="lead" style="font-size: 1rem;">@Model?.Description</p>

            <div class="mt-5 d-grid gap-2 d-md-block">
                <button class="btn btn-primary btn-lg px-4 me-md-2">В корзину</button>
                <a asp-controller="Product" asp-action="List" class="btn btn-outline-light btn-lg px-4">Назад</a>
            </div>
        </div>
    </div>
</div>