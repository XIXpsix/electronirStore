@model ElectronicsStore.Models.GetProductViewModel
@* Обратите внимание: модель изменилась! *@

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5 mb-5">
    @* ... код кнопки назад ... *@

    <div class="card bg-dark text-white ...">
        <div class="row g-0">
            <div class="col-md-6 bg-white ... p-5">

                @* Главная картинка *@
                <img src="@Model.ImagePath" class="img-fluid mb-3" alt="@Model.Name">

                @* ГАЛЕРЕЯ (Добавлено) *@
                @if (Model.GalleryImages.Any())
                {
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        @foreach (var img in Model.GalleryImages)
                        {
                            <img src="@img" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;"
                                 onclick="document.querySelector('.img-fluid').src = this.src">
                            @* Простой JS для переключения картинок *@
                        }
                    </div>
                }
            </div>

            <div class="col-md-6">
                <div class="card-body ...">
                    <span class="text-uppercase ...">@Model.CategoryName</span>
                    <h1 class="card-title ...">@Model.Name</h1>
                    <span class="display-5 ...">@Model.Price.ToString("N0") ₽</span>

                    <div class="mb-5">
                        <h5>Описание</h5>
                        <p>@Model.Description</p>
                    </div>

                    @* ... кнопки ... *@
                </div>
            </div>
        </div>
    </div>
</div>