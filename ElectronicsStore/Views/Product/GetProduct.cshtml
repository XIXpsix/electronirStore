@model ElectronicsStore.Domain.Entity.Product

@{
    ViewData["Title"] = Model?.Name ?? "Товар";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card bg-dark border-secondary">
                <div class="card-body text-center">
                    @if (Model.Avatar != null && Model.Avatar.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Avatar)" alt="@Model.Name" class="img-fluid rounded" style="max-height: 400px;">
                    }
                    else
                    {
                        <img src="~/img/iphone15.jpg" alt="Нет изображения" class="img-fluid rounded">
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 text-white">
            <h2 class="text-warning">@Model.Name</h2>
            <h4 class="text-muted">Цена: <span class="text-white">@Model.Price ₽</span></h4>
            <p class="mt-3">Категория: <strong>@(Model.Category?.Name ?? "Не указана")</strong></p>

            <hr class="bg-secondary" />

            <h5>Описание:</h5>
            <p>@Model.Description</p>

            <div class="mt-4">
                <a class="btn btn-primary btn-lg" href="#">Добавить в корзину</a>
                <a class="btn btn-secondary btn-lg ml-2" asp-controller="Product" asp-action="List">Назад в каталог</a>
            </div>
        </div>
    </div>
</div>