@model IEnumerable<ElectronicsStore.Domain.Entity.CartItem>

@{
    ViewData["Title"] = "Корзина";
}

<div class="container py-5">
    <h2 class="mb-4 text-white">Ваша корзина</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-hover text-white">
            <thead>
                <tr>
                    <th>Фото</th>
                    <th>Товар</th>
                    <th>Цена</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    // Логика обработки пути к картинке
                    string imagePath;

                    // ИСПРАВЛЕНИЕ: Сначала ищем в коллекции картинок, если нет — берем из свойства ImagePath товара
                    var dbImage = item.Product.Images?.FirstOrDefault()?.ImagePath ?? item.Product.ImagePath;

                    if (!string.IsNullOrEmpty(dbImage))
                    {
                        // 1. Меняем обратные слеши на прямые
                        imagePath = dbImage.Replace("\\", "/");
                        // 2. Если путь не начинается со слеша, добавляем его (делаем абсолютным)
                        if (!imagePath.StartsWith("/"))
                        {
                            imagePath = "/" + imagePath;
                        }
                    }
                    else
                    {
                        // Если в БД нет картинки, ставим заглушку
                        imagePath = "/img/G.png";
                    }

                    <tr>
                        <td class="align-middle">
                            <img src="@imagePath"
                                 onerror="this.onerror=null;this.src='/img/G.png';"
                                 alt="@item.Product.Name"
                                 style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;" />
                        </td>
                        <td class="align-middle">@item.Product.Name</td>
                        <td class="align-middle">@item.Product.Price.ToString("C")</td>
                        <td class="align-middle">
                            <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <h4 class="text-end text-white">Итого: @Model.Sum(x => x.Product.Price).ToString("C")</h4>
            <a asp-action="Clear" class="btn btn-outline-danger">Очистить корзину</a>
            <a asp-controller="Order" asp-action="Create" class="btn btn-success ms-2">Оформить заказ</a>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Ваша корзина пуста.
            <a asp-controller="Home" asp-action="Catalog">Перейти в каталог</a>
        </div>
    }
</div>