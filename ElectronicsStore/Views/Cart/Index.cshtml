@model IEnumerable<ElectronicsStore.Domain.Entity.CartItem>

@{
    ViewData["Title"] = "Корзина";
}

<div class="container py-5">
    <h2 class="mb-4">Ваша корзина</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Товар</th>
                    <th>Цена</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>
                            <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <h4 class="text-end">Итого: @Model.Sum(x => x.Product.Price).ToString("C")</h4>
            <a asp-action="Clear" class="btn btn-outline-danger">Очистить корзину</a>
            <a asp-controller="Order" asp-action="Create" class="btn btn-success ms-2">Оформить заказ</a>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Ваша корзина пуста. <a asp-controller="Home" asp-action="Catalog">Перейти в каталог</a>
        </div>
    }
</div>