@{
    ViewData["Title"] = "Главная страница";
}

<div class="text-center py-5">
    <h1 class="display-4 text-white">Добро пожаловать в ElectronicsStore!</h1>
    <p class="lead text-white-50">Начните покупки, перейдя в наш <a asp-controller="Home" asp-action="Catalog" class="text-warning fw-bold">Каталог</a>.</p>

    @* Опционально: ссылка на админ-панель, если пользователь авторизован как администратор *@
    @if (User.IsInRole("Admin"))
    {
        <p class="mt-4">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-warning fw-bold">Перейти в Панель Администратора</a>
        </p>
    }
</div>