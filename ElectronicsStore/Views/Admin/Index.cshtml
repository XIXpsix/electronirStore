@model List<ElectronicsStore.Domain.Entity.Product>
@using ElectronicsStore.Domain.Enum
@using System.Linq

@{
    ViewData["Title"] = "Панель администратора";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-warning text-black fw-bold">Добавить товар</a>
    </div>

    @* Отображение сообщений об успехе/ошибке *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card bg-dark-card border-secondary shadow">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <table class="table table-dark table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Изображение</th>
                            <th>ID</th>
                            <th>Название</th>
                            <th>Цена</th>
                            <th>Категория</th>
                            <th>Создан</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        // ИСПРАВЛЕНИЕ: Безопасный доступ к пути первого изображения
                                        var imagePath = product.Images.FirstOrDefault()?.ImagePath ?? "/img/w.png";
                                    }
                                    <img src="@imagePath" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                                </td>
                                <td>@product.Id</td>
                                <td>@product.Name</td>
                                <td>@product.Price.ToString("N0") ₽</td>
                                <td>@(product.Category?.Name ?? "N/A")</td>
                                <td>@product.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning me-2">Редактировать</a>
                                    <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('Вы уверены, что хотите удалить товар \'@product.Name\'?');">
                                        <input type="hidden" name="id" value="@product.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info m-4">Товары пока не добавлены.</div>
            }
        </div>
    </div>
</div>