@model List<ElectronicsStore.Domain.Category>

@{
    ViewData["Title"] = "Каталог";
}

<div style="margin-top: 100px; padding: 0 15px;">

    <h2 style="text-align: center; margin-bottom: 30px; font-weight: 700; color: #333;">Категории товаров</h2>

    @if (Model != null && Model.Any())
    {
        <div class="categories-grid">
            @foreach (var category in Model)
            {
                <div class="category-card">
                    <a asp-controller="Product" asp-action="List" asp-route-categoryId="@category.Id" style="text-decoration: none; color: inherit;">

                        <div class="card-img-wrapper">
                            <img src="@category.ImagePath" alt="@category.Name" />
                        </div>

                        <div class="card-body">
                            <h3>@category.Name</h3>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <p style="text-align: center; font-size: 18px;">Категории пока не добавлены.</p>
    }
</div>

<style>
    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .category-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        border: 1px solid #eee;
    }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .card-img-wrapper {
        height: 200px;
        width: 100%;
        overflow: hidden;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .card-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Картинка заполнит блок, обрезая лишнее */
            transition: transform 0.5s ease;
        }

    .category-card:hover .card-img-wrapper img {
        transform: scale(1.05); /* Легкое увеличение картинки при наведении */
    }

    .card-body {
        padding: 20px;
        text-align: center;
    }

        .card-body h3 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 600;
        }
</style>