@model IEnumerable<ElectronicsStore.Domain.Entity.Category>
@using ElectronicsStore
@using ElectronicsStore.Models
@using ElectronicsStore.Domain.ViewModels
@using ElectronicsStore.Domain.Entity // <-- Это пространство имен
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Категории";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Категории товаров</h2>

    <div class="row">
        @foreach (var category in Model)
        {
            // col-12 для отображения в столбик
            <div class="col-12 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="card-title mb-1">@category.Name</h4>
                            <p class="card-text text-muted mb-0">@category.Description</p>
                        </div>
                        <a asp-controller="Product" asp-action="List" asp-route-categoryId="@category.Id" class="btn btn-outline-dark">
                            Перейти
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>