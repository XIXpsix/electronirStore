@model ElectronicsStore.Domain.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<div class="auth-container">
    <div class="auth-card slide-in-bottom">
        <h2 class="auth-title">Вход в систему</h2>

        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="text-danger mb-3" asp-validation-summary="ModelOnly"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Email">Email адрес</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" />
                <label asp-for="Password">Пароль</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-auth">ВОЙТИ</button>
        </form>

        <div class="text-center mt-3">
            <span class="text-muted">или</span>
        </div>

        <div class="mt-3">
            <a asp-action="AuthenticationGoogle" asp-controller="Account" class="btn btn-outline-dark w-100 d-flex align-items-center justify-content-center" style="border-color: #dbdbdb;">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" class="me-2">
                    <path d="M17.64 9.2c0-.637-.057-1.252-.164-1.841H9v3.481h4.844a4.14 4.14 0 0 1-1.796 2.716v2.259h2.908c1.702-1.567 2.684-3.875 2.684-6.615z" fill="#4285F4"></path>
                    <path d="M9 18c2.43 0 4.467-.806 5.956-2.18l-2.908-2.259c-.806.54-1.837.86-3.048.86-2.344 0-4.328-1.584-5.036-3.715H.957v2.332A8.997 8.997 0 0 0 9 18z" fill="#34A853"></path>
                    <path d="M3.964 10.71A5.41 5.41 0 0 1 3.682 9c0-.593.102-1.17.282-1.71V4.958H.957A8.996 8.996 0 0 0 0 9c0 1.452.348 2.827.957 4.042l3.007-2.332z" fill="#FBBC05"></path>
                    <path d="M9 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.463.891 11.426 0 9 0A8.997 8.997 0 0 0 .957 4.958L3.964 7.272C4.672 5.142 6.656 3.58 9 3.58z" fill="#EA4335"></path>
                </svg>
                Войти через Google
            </a>
        </div>

        <div class="auth-footer">
            <p class="text-muted">Нет аккаунта? <a asp-action="Register">Зарегистрироваться</a></p>
        </div>
    </div>
</div>