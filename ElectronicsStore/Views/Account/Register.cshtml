@model ElectronicsStore.Domain.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="auth-container">
    <div class="auth-card slide-in-bottom">
        <h2 class="auth-title">Создать аккаунт</h2>

        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" novalidate>
            <div class="text-danger mb-3" asp-validation-summary="ModelOnly"></div>

            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Ваше имя" />
                <label asp-for="Name">Имя пользователя</label>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Email">Email адрес</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" />
                <label asp-for="Password">Пароль</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Подтверждение" />
                <label asp-for="PasswordConfirm">Повторите пароль</label>
                <span asp-validation-for="PasswordConfirm" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-auth" style="width: 100%;">ЗАРЕГИСТРИРОВАТЬСЯ</button>
        </form>

        <div class="text-center mt-3 mb-3">
            <span class="text-muted">или</span>
        </div>

        <a asp-action="AuthenticationGoogle" asp-controller="Account" class="btn btn-outline-dark w-100 d-flex align-items-center justify-content-center" style="border-color: #ccc;">
            <img src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" alt="G" style="width: 20px; margin-right: 10px;" />
            Регистрация через Google
        </a>

        <div class="auth-footer mt-4">
            <p class="text-muted">Уже есть аккаунт? <a asp-action="Login">Войти</a></p>
        </div>
    </div>
</div>