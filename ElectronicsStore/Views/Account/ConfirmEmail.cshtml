@model ElectronicsStore.Domain.ViewModels.ConfirmEmailViewModel

@{
    ViewData["Title"] = "Подтверждение почты";
}

<div class="row justify-content-center">
    <div class="col-md-4" style="background: #1e1e1e; padding: 20px; border-radius: 10px; border: 1px solid #ff6600;">
        <h2 class="text-center" style="color: #ff6600;">Введите код</h2>
        <p class="text-muted text-center">Мы отправили код на @Model.Email</p>

        <form asp-action="ConfirmEmail" method="post">
            <input type="hidden" asp-for="Email" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label style="color: white;">Код из письма</label>
                <input asp-for="Code" class="form-control" style="background: #333; color: white; border: 1px solid #555;" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100" style="background-color: #ff6600; border: none;">Подтвердить</button>
        </form>
    </div>
</div>