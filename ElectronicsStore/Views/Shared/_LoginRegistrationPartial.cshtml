<div class="p-5 overflow-hidden position-relative d-flex flex-column justify-content-center" style="min-height: 550px;">

    <div style="width: 100%; overflow: hidden;">
        <div class="auth-slider" id="authSlider">

            <div class="auth-view" id="loginView">
                <h2 class="fw-bold mb-4 text-center" style="color: #ff6600;">ВХОД</h2>
                <form asp-controller="Account" asp-action="Login" method="post" novalidate>
                    <div class="form-floating mb-3">
                        <input name="Email" type="email" class="form-control dark-input" placeholder="Email" required>
                        <label>Email адрес</label>
                    </div>
                    <div class="form-floating mb-4">
                        <input name="Password" type="password" class="form-control dark-input" placeholder="Пароль" required>
                        <label>Пароль</label>
                    </div>
                    <button type="submit" class="btn btn-orange w-100 py-3 fw-bold">ВОЙТИ В СИСТЕМУ</button>
                </form>

                <div class="text-center mt-3">
                    <p class="text-muted small mb-2">или через</p>
                    <a href="@Url.Action("AuthenticationGoogle", "Account")" class="btn btn-outline-light w-100 d-flex align-items-center justify-content-center py-2" style="border-color: #333;">
                        <img src="~/img/G.png" alt="G" width="20" height="20" class="me-2" onerror="this.src='https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg'">
                        <span class="fw-bold">Google</span>
                    </a>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted small">Впервые у нас?</p>
                    <button class="btn btn-outline-orange btn-sm" onclick="switchMode('register')">СОЗДАТЬ АККАУНТ →</button>
                </div>
            </div>

            <div class="auth-view" id="registerView">
                <h2 class="fw-bold mb-4 text-center" style="color: #ff6600;">РЕГИСТРАЦИЯ</h2>
                <form asp-controller="Account" asp-action="Register" method="post" novalidate>
                    <div class="form-floating mb-2">
                        <input name="Name" type="text" class="form-control dark-input" placeholder="Имя" required>
                        <label>Ваше Имя</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input name="Email" type="email" class="form-control dark-input" placeholder="Email" required>
                        <label>Email</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input name="Password" type="password" class="form-control dark-input" placeholder="Пароль" required>
                        <label>Пароль</label>
                    </div>
                    <div class="form-floating mb-4">
                        <input name="PasswordConfirm" type="password" class="form-control dark-input" placeholder="Повтор" required>
                        <label>Повторите пароль</label>
                    </div>
                    <button type="submit" class="btn btn-orange w-100 py-3 fw-bold">ЗАРЕГИСТРИРОВАТЬСЯ</button>
                </form>

                <div class="text-center mt-3">
                    <p class="text-muted small mb-2">или регистрация через</p>
                    <a href="@Url.Action("AuthenticationGoogle", "Account")" class="btn btn-outline-light w-100 d-flex align-items-center justify-content-center py-2" style="border-color: #333;">
                        <img src="~/img/G.png" alt="G" width="20" height="20" class="me-2" onerror="this.src='https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg'">
                        <span class="fw-bold">Google</span>
                    </a>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted small">Уже есть аккаунт?</p>
                    <button class="btn btn-outline-orange btn-sm" onclick="switchMode('login')">← ВЕРНУТЬСЯ КО ВХОДУ</button>
                </div>
            </div>

        </div>
    </div>
</div>