@model RegisterViewModel

<!-- ✅ МОДАЛЬНОЕ ОКНО (кастомное, БЕЗ Bootstrap Modal!) -->
<div id="modal-overlay" class="modal-overlay">
    <div id="modal-content" class="modal-content">
        
        <!-- Крестик для закрытия -->
        <button type="button" class="modal-close">&times;</button>

        <!-- Слайдер с двумя формами -->
        <div class="modal-slider">

            <!-- === ФОРМА ВХОДА === -->
            <div class="modal-form-container">
                <h2 class="modal-title">Вход</h2>
                <form id="loginForm" method="post">
                    
                    <div id="loginError" class="modal-server-error"></div>

                    <div class="modal-form-group">
                        <label for="loginEmail">Email:</label>
                        <input type="email" id="loginEmail" name="email" class="modal-input" required />
                    </div>

                    <div class="modal-form-group">
                        <label for="loginPassword">Пароль:</label>
                        <input type="password" id="loginPassword" name="password" class="modal-input" required />
                    </div>

                    <button type="submit" class="modal-button">Войти</button>
                </form>

                <div class="modal-switcher">
                    Нет аккаунта? 
                    <a href="#" id="go-to-register">Зарегистрироваться</a>
                </div>
            </div>

            <!-- === ФОРМА РЕГИСТРАЦИИ === -->
            <div class="modal-form-container">
                <h2 class="modal-title">Регистрация</h2>
                <form id="registerForm" method="post">
                    
                    <div id="registerError" class="modal-server-error"></div>

                    <div class="modal-form-group">
                        <label for="registerEmail">Email:</label>
                        <input type="email" id="registerEmail" name="email" class="modal-input" required />
                    </div>

                    <div class="modal-form-group">
                        <label for="registerPassword">Пароль:</label>
                        <input type="password" id="registerPassword" name="password" class="modal-input" required />
                    </div>

                    <div class="modal-form-group">
                        <label for="registerConfirm">Повторите пароль:</label>
                        <input type="password" id="registerConfirm" name="confirmPassword" class="modal-input" required />
                    </div>

                    <button type="submit" class="modal-button">Зарегистрироваться</button>
                </form>

                <div class="modal-switcher">
                    Уже есть аккаунт? 
                    <a href="#" id="go-to-login">Войти</a>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    /* Дополнительный фикс для прокрутки при открытом модале */
    body.modal-open {
        overflow: hidden;
    }
</style>