@using System.Security.Claims

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        // Получаем путь к аватарке из Claims
        var avatarPath = User.FindFirst("AvatarPath")?.Value ?? "/img/w.png";
        var userName = User.Identity.Name;

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @* Здесь используем Claim AvatarPath, который мы обновили в контроллере! *@
                <img src="@avatarPath" class="rounded-circle" style="width: 35px; height: 35px; object-fit: cover; border: 2px solid #ff6600;" alt="Avatar">
                <span class="ms-2 text-light-custom d-none d-md-inline">@userName</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end bg-dark border-secondary" aria-labelledby="navbarDropdown">
                <li>
                    <a class="dropdown-item text-light hover-orange" asp-controller="User" asp-action="Profile">
                        👤 Мой профиль
                    </a>
                </li>
                <li>
                    <a class="dropdown-item text-light hover-orange" asp-controller="Cart" asp-action="Index">
                        🛒 Корзина
                    </a>
                </li>
                @* Добавим место для Архива (Истории заказов), который реализуем позже *@
                <li>
                    <a class="dropdown-item text-light hover-orange" href="#">
                        📦 Мои заказы (Архив)
                    </a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li><hr class="dropdown-divider bg-secondary"></li>
                    <li>
                        <a class="dropdown-item text-warning fw-bold hover-orange" asp-controller="Admin" asp-action="Index">
                            🛠 Панель администратора
                        </a>
                    </li>
                }

                <li><hr class="dropdown-divider bg-secondary"></li>
                <li>
                    <a class="dropdown-item text-danger hover-orange" asp-controller="Account" asp-action="Logout">
                        🚪 Выход
                    </a>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <div class="form-btn-container">
                @* Кнопка, привязанная к скрипту через id="click-to-hide" *@
                <button class="nav-link btn btn-link text-light-custom" id="click-to-hide">
                    Войти / Регистрация
                </button>
            </div>
        </li>
    }
</ul>

<style>
    .hover-orange:hover {
        background-color: #ff6600 !important;
        color: white !important;
    }

    .dropdown-menu {
        margin-top: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
    }
</style>