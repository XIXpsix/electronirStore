@* Убираем эти строки, так как они вызывают ошибку *@
@* @using Microsoft.AspNetCore.Identity *@
@* @using ElectronicsStore.Domain.Entity *@
@* @inject UserManager<User> UserManager *@

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    // Получаем путь к аватарке из Claims, которые мы записали при входе.
    // Если его нет, ставим картинку по умолчанию.
    var avatarPath = User.FindFirst("AvatarPath")?.Value ?? "/img/w.png";

    <div class="dropdown text-end">
        <a href="#" class="d-block link-light text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            @* Используем переменную avatarPath *@
            <img src="@avatarPath" alt="User" width="32" height="32" class="rounded-circle">
            <span class="text-white ms-2">@User.Identity.Name</span>
        </a>
        <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
            <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">👤 Профиль</a></li>
            <li><a class="dropdown-item" asp-controller="Cart" asp-action="Index">🛒 Корзина</a></li>

            @* Проверка роли работает через стандартный механизм Claims *@
            @if (User.IsInRole("Admin"))
            {
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" asp-controller="Admin" asp-action="Index">🔧 Админ-панель</a></li>
            }

            <li><hr class="dropdown-divider"></li>

            <li>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="dropdown-item">Выйти</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <div class="text-end">
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light me-2">Войти</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-warning">Регистрация</a>
    </div>
}