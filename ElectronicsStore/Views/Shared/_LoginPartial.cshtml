@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Profile" asp-action="Index" title="Manage">Привет, @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-warning">Выйти</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-warning" asp-controller="Account" asp-action="Login">Вход</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-warning" asp-controller="Account" asp-action="Register">Регистрация</a>
        </li>
    }
</ul>