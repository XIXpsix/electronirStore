@using ElectronicsStore.Domain.Entity
@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject IWebHostEnvironment Environment
@inject ICompositeViewEngine Engine
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicsStore</title>
    <!-- Подключение общих стилей -->
    <link rel="stylesheet" href="~/css/Shared.css" asp-append-version="true" />

    <!-- ИЗМЕНЕНИЕ 1: Добавлен CSS для модального окна (из Главы 6) -->
    <link rel="stylesheet" href="~/css/login_and_registration.css" asp-append-version="true" />
</head>
<body>
    <!-- ------------------------------------------------------------------ -->
    <!-- ХЕДЕР (ШАПКА) -->
    <!-- ------------------------------------------------------------------ -->
    <header>
        <div id="header-top">
            <a asp-controller="Home" asp-action="Index" class="logo">ElectronicsStore</a>

            <!-- ИЗМЕНЕНИЕ 2: Логика "Вошел / Не вошел" перенесена сюда -->
            <div class="button-header">
                @if (SignInManager.IsSignedIn(User))
                {
                    <!-- Если пользователь ВОШЕЛ: -->
                    <a class="button" asp-controller="User" asp-action="Profile" title="Управление">@User.Identity?.Name</a>
                    <form class="form-inline-button" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="button">Выход</button>
                    </form>
                }
                else
                {
                    <!-- Если пользователь НЕ ВОШЕЛ: -->
                    <!-- Эта кнопка открывает модальное окно (из Главы 6, рис. 293) -->
                    <button id="click-to-hide" class="button">Войти</button>
                }
            </div>

            <!-- КНОПКА ГАМБУРГЕР-МЕНЮ (Видна только на мобильных) -->
            <button id="mobile-menu-toggle" class="mobile-menu-button" aria-label="Открыть меню">
                &#9776; <!-- Юникод иконка бургер-меню -->
            </button>
        </div>

        <!-- КОНТЕЙНЕР ДЛЯ МЕНЮ -->
        <div id="header-bottom" class="menu-container">
            <nav class="menu">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index" asp-fragment="about">О нас</a></li>
                    <li><a asp-controller="Catalog" asp-action="Index">Каталог товаров</a></li>
                    <li><a asp-controller="Home" asp-action="Index" asp-fragment="contacts">Контакты</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- ------------------------------------------------------------------ -->
    <!-- ОСНОВНОЕ ТЕЛО САЙТА -->
    <!-- ------------------------------------------------------------------ -->
    <div class="container-body">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- ------------------------------------------------------------------ -->
    <!-- ПОДВАЛ (ФУТЕР) -->
    <!-- ------------------------------------------------------------------ -->
    <footer>
        <div>
            <div class="footer-left">
                <a asp-controller="Home" asp-action="Index" class="logo">ElectronicsStore</a>
                <p>
                    Ваш надежный поставщик электроники и бытовой техники.
                    Мы предлагаем только сертифицированную продукцию от ведущих мировых брендов.
                </p>
                <p class="footer-copy">© @DateTime.Now.Year ElectronicsStore. Все права защищены.</p>
            </div>

            <div class="footer-right">
                <h4>Навигация</h4>
                <nav class="menu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index" asp-fragment="about">О нас</a></li>
                        <li><a asp-controller="Catalog" asp-action="Index">Каталог товаров</a></li>
                        <li><a asp-controller="Home" asp-action="Index" asp-fragment="contacts">Контакты</a></li>
                    </ul>
                </nav>
                <!-- ИЗМЕНЕНИЕ 3: Блок "if (SignInManager.IsSignedIn)" отсюда УБРАН, т.к. он теперь в шапке -->
            </div>
        </div>
    </footer>

    <!-- Подключение общих скриптов -->
    <script src="~/js/shared_script.js" asp-append-version="true"></script>

    <!-- ИЗМЕНЕНИЕ 4: Подключаем HTML модального окна (из Главы 6, рис. 60) -->
    @await Html.PartialAsync("_LoginRegistrationPartial")

    <!-- ИЗМЕНЕНИЕ 5: Подключаем JS для модального окна (из Главы 8) -->
    <script src="~/js/login_and_registration_script.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>