<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicsStore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Shared.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login_and_registration.css" asp-append-version="true" />
</head>
<body>

    <div class="video-background-holder">
        <div class="video-side">
            <div class="video-background-overlay"></div>
        </div>
        <div class="video-center-gap"></div>
        <div class="video-side">
            <div class="video-background-overlay"></div>
        </div>
    </div>

    <div class="mobile-menu-overlay" id="mobile-menu-overlay">
        <div class="mobile-nav-content">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                <li><a asp-controller="Categories" asp-action="ListOfCategories">Каталог</a></li>
                <li><a asp-controller="Home" asp-action="Privacy">Приватность</a></li>
                <li class="menu-separator"></li>
                <li><button class="mobile-btn login-btn" id="mobile-login-trigger">Войти</button></li>
                <li><button class="mobile-btn register-btn" id="mobile-register-trigger">Регистрация</button></li>
            </ul>
        </div>
    </div>

    <div class="menu-icon-3-lines" id="mobile-menu-btn">
        <span></span>
        <span></span>
        <span></span>
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-uppercase fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    ElectronicsStore
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between desktop-only">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="ListOfCategories">Каталог</a>
                        </li>
                    </ul>
                    <partial name="_LoginRegistrationPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-body">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center pt-3">
            &copy; 2025 - ElectronicsStore - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: #ff6600;">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>