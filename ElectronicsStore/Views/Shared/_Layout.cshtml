<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicsHub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Shared.css" />
    <link rel="stylesheet" href="~/" />
    <link rel="stylesheet" href="~/css/login_and_registration.css" />

    <style>
        body {
            background-color: #121212;
            overflow-x: hidden;
        }

        /* Видео сайдбары */
        .video-sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            width: 250px;
            z-index: 0;
            overflow: hidden;
            background: #000;
        }

        .sidebar-left {
            left: 0;
        }

        .sidebar-right {
            right: 0;
        }

        .video-sidebar video {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.4; /* Чуть темнее, чтобы не отвлекало */
        }

        /* Основной контент */
        .main-site-wrapper {
            position: relative;
            z-index: 10;
            margin-left: 250px;
            margin-right: 250px;
            background-color: #1a1a1a;
            min-height: 100vh;
            box-shadow: 0 0 50px rgba(0,0,0,0.8);
            display: flex;
            flex-direction: column;
        }

        /* Адаптивность */
        @@media (max-width: 1200px) {
            .video-sidebar

        {
            display: none;
        }

        .main-site-wrapper {
            margin: 0;
        }

        }

        /* Поиск */
        .search-container {
            position: relative;
            /* Ширина на ПК фиксированная, на моб - 100% */
            width: 300px;
        }
        @@media (max-width: 991px) {
            .search-container

        {
            width: 100%; /* На мобиле во всю ширину */
            margin-top: 15px; /* Отступ сверху от ссылок */
            margin-bottom: 15px;
        }

        }

        .search-results {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background: #252525;
            border: 1px solid #444;
            border-radius: 0 0 8px 8px;
            z-index: 1000;
            display: none;
            box-shadow: 0 10px 20px rgba(0,0,0,0.5);
        }

        .search-item {
            padding: 10px;
            color: #eee;
            border-bottom: 1px solid #333;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
        }

            .search-item:hover {
                background: #ff9900;
                color: #000;
            }

            .search-item:last-child {
                border: none;
            }
    </style>
</head>
<body>

    <div class="video-sidebar sidebar-left">
        <video autoplay muted loop playsinline>
            <source src="~/img/pc.mp4" type="video/mp4">
        </video>
    </div>

    <div class="video-sidebar sidebar-right">
        <video autoplay muted loop playsinline>
            <source src="~/img/pc1.mp4" type="video/mp4">
        </video>
    </div>

    <div class="main-site-wrapper">
        <header>
            <nav class="navbar navbar-expand-xl navbar-dark bg-black border-bottom border-warning px-4 py-3">
                <div class="container-fluid">
                    <a class="navbar-brand text-warning fw-bold fs-3" asp-controller="Home" asp-action="Index">
                        ElectronicsHub
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarContent">

                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-uppercase fw-bold align-items-center">
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="Index">Главная</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="About">О нас</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Home" asp-action="Catalog">
                                    ☰ Каталог
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="Contacts">Контакты</a>
                            </li>
                        </ul>

                        <div class="search-container mx-lg-3">
                            <form asp-controller="Home" asp-action="Catalog" method="get" class="d-flex w-100">
                                <input type="text" name="searchString" id="searchInput"
                                       class="form-control bg-dark text-white border-secondary rounded-pill"
                                       placeholder="🔍 Найти товар..." autocomplete="off">
                            </form>
                            <div id="searchResults" class="search-results"></div>
                        </div>

                        <div class="d-flex align-items-center justify-content-center">
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="container py-4 flex-grow-1">
            @RenderBody()
        </main>

        <footer class="bg-black text-white text-center py-3 border-top border-secondary mt-auto">
            <div class="container">
                <p class="mb-0">&copy; 2025 - ElectronicsHub</p>
            </div>
        </footer>
    </div>

    <partial name="_LoginRegistrationPartial" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/shared_script.js"></script>
    <script src="~/js/animation.js"></script>
    <script src="~/js/login_and_registration_script.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Имитация данных для живого поиска
            const products = [
                { name: "Ноутбук Asus ROG", price: "125 000 ₽" },
                { name: "Видеокарта RTX 4090", price: "180 000 ₽" },
                { name: "Мышь Logitech G Pro", price: "12 000 ₽" },
                { name: "Клавиатура HyperX", price: "8 500 ₽" },
                { name: "iPhone 15 Pro Max", price: "140 000 ₽" }
            ];

            const input = document.getElementById('searchInput');
            const results = document.getElementById('searchResults');

            if(input && results) {
                input.addEventListener('input', function() {
                    const val = this.value.toLowerCase().trim();
                    results.innerHTML = '';

                    if (val.length === 0) {
                        results.style.display = 'none';
                        return;
                    }

                    const filtered = products.filter(p => p.name.toLowerCase().includes(val));

                    if (filtered.length > 0) {
                        filtered.forEach(p => {
                            const div = document.createElement('div');
                            div.className = 'search-item';
                            div.innerHTML = `<span>${p.name}</span> <span class="text-warning">${p.price}</span>`;
                            div.onclick = () => {
                                // При клике подставляем в поле и отправляем форму
                                input.value = p.name;
                                input.closest('form').submit();
                            };
                            results.appendChild(div);
                        });
                        results.style.display = 'block';
                    } else {
                        results.innerHTML = '<div style="padding:10px; text-align:center; color:#777;">Ничего не найдено</div>';
                        results.style.display = 'block';
                    }
                });

                document.addEventListener('click', (e) => {
                    if (!input.contains(e.target) && !results.contains(e.target)) {
                        results.style.display = 'none';
                    }
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>