<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicsHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Shared.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login_and_registration.css" asp-append-version="true" />
</head>
<body>
    <div class="side-video left-side">
        <video autoplay muted loop>
            <source src="~/video/pc.mp4" type="video/mp4">
        </video>
        <div class="video-overlay"></div>
    </div>

    <div class="side-video right-side">
        <video autoplay muted loop>
            <source src="~/video/pc1.mp4" type="video/mp4">
        </video>
        <div class="video-overlay"></div>
    </div>

    <div class="main-wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark custom-navbar box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand brand-orange" asp-area="" asp-controller="Home" asp-action="Index">
                        ElectronicsHub
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-area="" asp-controller="Home" asp-action="Privacy">Приватность</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-area="" asp-controller="Home" asp-action="Catalog">Каталог</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav">
                            @await Html.PartialAsync("_LoginPartial")
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container content-container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer-custom text-muted">
            <div class="container">
                &copy; 2025 - <span class="text-orange">ElectronicsHub</span> - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/shared_script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

