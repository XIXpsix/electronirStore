<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicsHub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Shared.css" />
    <link rel="stylesheet" href="~/css/login_and_registration.css" />

    <style>
        .search-results-box {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background: #1e1e1e; /* Темный фон */
            border: 1px solid #444;
            border-radius: 0 0 10px 10px;
            z-index: 9999;
            display: none;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.5);
            margin-top: 5px;
        }

        .search-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 15px;
            cursor: pointer;
            border-bottom: 1px solid #333;
            color: #e0e0e0;
            transition: background 0.2s;
        }

            .search-item:hover {
                background: #ff9900;
                color: #000;
            }

            .search-item:last-child {
                border-bottom: none;
            }
    </style>
</head>
<body>

    <div class="video-sidebar-container left-sidebar">
        <div class="video-overlay"></div>
        <video autoplay muted loop playsinline class="video-element">
            <source src="~/img/pc.mp4" type="video/mp4">
            Ваш браузер не поддерживает видео.
        </video>
    </div>

    <div class="video-sidebar-container right-sidebar">
        <div class="video-overlay"></div>
        <video autoplay muted loop playsinline class="video-element">
            <source src="~/img/pc1.mp4" type="video/mp4">
            Ваш браузер не поддерживает видео.
        </video>
    </div>

    <div class="main-wrapper">
        <header>
            <nav class="navbar navbar-expand-xl navbar-dark custom-navbar box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand brand-orange" asp-area="" asp-controller="Home" asp-action="Index">
                        ElectronicsHub
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse" id="navbarSupportedContent">

                        <ul class="navbar-nav mx-auto mb-2 mb-xl-0 text-center flex-grow-1 justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="Index">Главная</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="About">О нас</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="Catalog">Каталог товаров</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="Contacts">Контакты</a>
                            </li>
                        </ul>

                        <div class="search-wrapper d-none d-lg-block mx-3" style="position: relative; width: 300px;">
                            <input type="text" id="searchInput" placeholder="Поиск..." autocomplete="off"
                                   class="form-control bg-dark text-white border-secondary"
                                   style="border-radius: 20px; padding-left: 15px;">
                            <div id="searchResults" class="search-results-box"></div>
                        </div>
                        <div class="ms-auto">
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="content-container">
            @RenderBody()
        </main>

        <footer class="footer-custom">
            <div class="container text-center">
                <ul class="list-unstyled">
                    <li><a href="#" class="text-light-custom">Политика конфиденциальности</a></li>
                    <li><a href="#" class="text-light-custom">Условия использования</a></li>
                </ul>
                <p class="text-muted small mb-0">&copy; 2025 - ElectronicsHub</p>
            </div>
        </footer>
    </div>

    <partial name="_LoginRegistrationPartial" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/shared_script.js"></script>
    <script src="~/js/animation.js"></script>
    <script src="~/js/login_and_registration_script.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Имитация базы товаров
            const products = [
                { name: "Ноутбук Asus ROG", price: "125 000 ₽" },
                { name: "Мышь Logitech G Pro", price: "12 000 ₽" },
                { name: "Клавиатура HyperX", price: "8 500 ₽" },
                { name: "Монитор Samsung 144Hz", price: "22 000 ₽" },
                { name: "iPhone 15 Pro", price: "110 000 ₽" }
            ];

            const input = document.getElementById('searchInput');
            const resultsBox = document.getElementById('searchResults');

            if (input && resultsBox) {
                // Функция задержки (чтобы не моргало)
                function debounce(func, timeout = 300) {
                    let timer;
                    return (...args) => {
                        clearTimeout(timer);
                        timer = setTimeout(() => { func.apply(this, args); }, timeout);
                    };
                }

                // Логика поиска
                input.addEventListener('input', debounce(() => {
                    const query = input.value.toLowerCase().trim();
                    resultsBox.innerHTML = '';

                    if (query.length === 0) {
                        resultsBox.style.display = 'none';
                        return;
                    }

                    const found = products.filter(p => p.name.toLowerCase().includes(query));

                    if (found.length > 0) {
                        found.forEach(p => {
                            const div = document.createElement('div');
                            div.className = 'search-item';
                            div.innerHTML = `
                                <span style="font-weight:500;">${p.name}</span>
                                <span style="color:#ff9900; font-size:13px; font-weight:bold;">${p.price}</span>
                            `;
                            div.onclick = () => alert('Переход к товару: ' + p.name);
                            resultsBox.appendChild(div);
                        });
                        resultsBox.style.display = 'block';
                    } else {
                        resultsBox.innerHTML = '<div style="padding:10px; text-align:center; color:#777;">Ничего не найдено</div>';
                        resultsBox.style.display = 'block';
                    }
                }));

                // Скрыть при клике мимо
                document.addEventListener('click', (e) => {
                    if (!input.contains(e.target) && !resultsBox.contains(e.target)) {
                        resultsBox.style.display = 'none';
                    }
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>