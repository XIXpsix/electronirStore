<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicsHub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Shared.css" />
    <link rel="stylesheet" href="~/css/login_and_registration.css" />
</head>
<body>

    <div class="side-video left-side"></div>
    <div class="side-video right-side"></div>

    <div class="main-wrapper">
        <header>
            <nav class="navbar navbar-expand-xl navbar-dark custom-navbar box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand brand-orange" asp-area="" asp-controller="Home" asp-action="Index">
                        ElectronicsHub
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mx-auto mb-2 mb-xl-0 text-center flex-grow-1 justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="Index">Главная</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="About">О нас</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="Catalog">Каталог товаров</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light-custom" asp-controller="Home" asp-action="Contacts">Контакты</a>
                            </li>
                        </ul>

                        <div class="ms-auto">
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="content-container">
            @RenderBody()
        </main>

        <footer class="footer-custom">
            <div class="container text-center">
                <ul class="list-unstyled">
                    <li><a href="#" class="text-light-custom">Политика конфиденциальности</a></li>
                    <li><a href="#" class="text-light-custom">Условия использования</a></li>
                </ul>
                <p class="text-muted small mb-0">&copy; 2025 - ElectronicsHub</p>
            </div>
        </footer>
    </div>
    <div class="modal-overlay">
        <div class="login-modal">
            <h2>Вход в систему</h2>

            <form>
                <div class="input-group">
                    <label>Email адрес</label>
                    <input type="email" placeholder="name@example.com" value="xixpsix2@gmail.com">
                </div>

                <div class="input-group">
                    <label>Пароль</label>
                    <input type="password" placeholder="••••••••">
                </div>

                <button type="submit" class="login-btn">ВОЙТИ</button>
            </form>

            <div style="margin: 15px 0; font-size: 12px; color: #777;">или</div>

            <button class="google-btn">
                <img src="path-to-google-icon.png" width="16" alt="G">
                Войти через Google
            </button>

            <div style="margin-top: 20px; font-size: 12px;">
                Нет аккаунта? <a href="#" style="color: #ff9900;">Зарегистрироваться</a>
            </div>
        </div>
    </div>
    <partial name="_LoginRegistrationPartial" /> 

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/shared_script.js"></script>
    <script src="~/js/animation.js"></script>
    <script src="~/js/login_and_registration_script.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>